<head>
	<meta charset="utf-8" />
	<!-- Uncomment to make IE8 render like IE7 -->
	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->
	<!-- Set the viewport width to device width for mobile -->
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

	<title><%= content_for?(:title) ? yield(:title) : "Code Fellows Store" %></title>

	<%= stylesheet_link_tag    "application" %>
	<%= javascript_include_tag "vendor/custom.modernizr" %>
  <%= csrf_meta_tags %>
</head>

<body>
  <div class="off-canvas-wrap">
    <div class="inner-wrap">

      <%= render "layouts/zurb_nav" %>

      <div class="row">
        <div class="large-12 columns">
          <div class="row">
            <!-- Side Bar -->
            <div class="large-4 columns">

              <img src="http://placehold.it/500x500&text=Code Fellows Logo">

              <div class="hide-for-small panel">
                <h3>Code Fellows</h3>
                <h5 class="subheader">
                  Welcome to the store!  Thanks for showing your support
                  for your local developer school.
                </h5>
              </div>

              <a href="#">
                <div class="panel callout radius">
                  <h6>99&nbsp; items in your cart</h6>
                </div>
              </a>
            </div>
            <!-- End Side Bar -->


            <%= yield %>


            <!-- Managed By -->
              <div class="row">
                <div class="large-12 columns">
                  <div class="panel">
                    <div class="row">

                    <div class="large-2 small-6 columns">
                      <img src="http://placehold.it/300x300&text=Site Owner">
                    </div>

                    <div class="large-10 small-6 columns">
                      <strong>This Site Is Managed By<hr/></strong>
                      Chris C., Jerry T., and Mike T.
                    </div>

                  </div>
                </div>
              </div>
            <!-- End Managed By -->
          </div>
        </div>


    <!-- Footer -->
      <footer class="row">
        <div class="large-12 columns"><hr />
          <div class="row">

            <div class="large-6 columns">
              <p>
                &copy; 2014 Chris C., Jerry T., and Mike T.
              </p>
            </div>

            <!--
            <div class="large-6 columns">
              <ul class="inline-list right">
                <li><a href="#">Link 1</a></li>
                <li><a href="#">Link 2</a></li>
                <li><a href="#">Link 3</a></li>
                <li><a href="#">Link 4</a></li>
              </ul>
            </div>
              -->

          </div>
        </div>
      </footer>
    <!-- End Footer -->

    </div>
  </div>
    <script src="../../assets/js/marketing.js"></script>
    <script>
      $(document).foundation();
    </script>
    <%= javascript_include_tag "application" %>
  </body>
</html>
