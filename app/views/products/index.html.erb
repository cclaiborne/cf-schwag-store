<div class="large-8 columns">
  <div class="row">

    <!-- Thumbnails -->
    <% @products.each do |category, products| %>
      <% products.each do |product| %>
        <div class="large-4 small-6 columns">
          <%#= image_tag("http://placehold.it/500x500&text=#{product.name}") %>
          <% if product.default_image %>
            <%= image_tag product.default_image.path, :size => '200' %>
          <% else %>
            <%= image_tag("http://placehold.it/300x300&text=#{product.name}") %>
          <% end %>
          <div class="panel">
            <h5><%= link_to product.name, product_path(product.permalink) %></h5>
            <h6 class="subheader"><%= number_to_currency product.price %></h6>
          </div>
        </div>
      <% end %>
    <% end %>
    <!-- End Thumbnails -->

  </div>
  <!-- End Row -->

