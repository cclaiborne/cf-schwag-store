<h2><%= @product.name %></h2>

<% if @product.default_image %>
  <%= image_tag @product.default_image.path, :width => '200px', :style => "float:right" %>
<% end %>

<p><%= @product.short_description %></p>
<p><%= @product.sku %></p>
<p>
  <b><%= number_to_currency @product.price %></b>
  <%= link_to "ADD TO CART", product_path(@product.permalink), :method => :post, class: "small button" %>
  <%= link_to "Checkout", checkout_path, class: "small button" %>
</p>

<hr>
  <%= simple_format @product.description %>
<hr>

<p><%= link_to "Back to list", root_path %></p>
